<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/disappear_item"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#E0E0E0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/group_favorites">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:paddingRight="1px">
                    <ImageView
                        android:id="@+id/img_favorites"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/icon_empty_image"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/resname_favorites"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Taylor`s steak house"
                                android:gravity="bottom"
                                android:singleLine="true"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:textColor="#212121"
                                android:textSize="18dp"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/delete_favorites"
                            android:layout_width="50dp"
                            android:layout_gravity="right"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/icon_delete2"
                                android:layout_height="15dp" />

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/cuisine_favorites"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="10dp"
                                android:singleLine="true"
                                android:text="American dining, old-world vibe"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="30dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="18dp"
                                android:layout_height="20dp"
                                android:background="@drawable/icon_person"
                                />
                            <TextView
                                android:id="@+id/waitings_favorites"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:text="11"
                                android:paddingLeft="2dp"
                                android:gravity="center_vertical"
                                android:textSize="16dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>