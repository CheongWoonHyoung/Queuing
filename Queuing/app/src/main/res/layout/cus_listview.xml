<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/cus_item"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal"
        android:background="@drawable/group_map_search"
        >
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cus_priority"
                android:text="1"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#00695C"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/cus_name"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textColor="#212121"
                    android:text="Mark Yoon"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/cus_number"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:textSize="20dp"
                    android:text="3"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/cus_method"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:text="for using Queuing"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>